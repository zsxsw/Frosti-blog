      title="网上邻居"
      description="我的网上邻居哦~"
      textOverlay="鱼塘"
      infoIcon="lucide:link"
    >
      <div class="space-y-10">
        <!-- Friends Section -->
        <section>
          <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
            <Icon name="lucide:users" class="w-6 h-6 text-primary" />
            <span>Friends</span>
          </h2>

          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            {friends.map((friend: { title: unknown; icon: unknown; description: unknown; url: unknown; }) => (
              <FriendCard
                name={friend.title}
                avatar={friend.icon}
                description={friend.description}
                url={friend.url}
              />
            ))}
          </div>
        </section>

        <!-- Contributors Section -->
        <section>
          <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
            <Icon name="lucide:git-pull-request" class="w-6 h-6 text-primary" />
